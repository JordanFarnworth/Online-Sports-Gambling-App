<div class="row">
  <div class="col-md-3" style="margin-left: 70px">
<%= render "sidebar" %>
  </div>

  <div class="col-md-8" >
    <div class="panel panel-primary">
      <div class="panel-heading">
        <span class="panel-title">Payment Information</span>
        <span class="pull-right edit-pane">
          <i class="fa fa-pencil"></i>
        </span>
      </div>
      <div class="panel-body">
        Payment info Here
      </div>
    </div>
  </div>


  <div class="col-md-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <span class="panel-title">Group Information</span>
        <span class="pull-right edit-pane">
          <i class="fa fa-pencil" data-toggle="modal" data-target="#myGroupEditModal"></i>
        </span>
      </div>
      <div class="panel-body">
        Group Info Here
      </div>
    </div>
  </div>

</div>

<!--Group Edit Modal -->
<div class="modal fade" id="myGroupEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= @user.display_name %> Groups</h4>
      </div>
      <div class="modal-body">
        <% @user_groups.each do |g| %>
            <div class="list-group">
              <%= link_to g, class: 'list-group-item' do %>
                <h3 class="list-group-item-heading"><%= g.name %></h3>
                <p class="list-group-item-text">
                  <% g.users.each do |gu| %>
                      <%= gu.display_name %>
                  <% end %>
                </p>
              <% end %>
            </div>
        <% end %>

        <h2>Add User to Group</h2>
        <div name="groups-list-div" style="display: none;">
          <select name="groups-list" class="form-control" >
            <% @groups.each_with_index do |g, i| %>
                <option value="<%= g.id %>"  <%= 'selected' if i == 0 %>><%= g.name %></option>
            <% end %>
          </select>
          <button class="btn btn-primary form-control" name="add-group-membership-confirm">Confirm</button>
        </div>
        <h4>
          <%= link_to '#', name: 'add-group-membership' do %>
              <i class="fa fa-plus"></i>
              Add Group
          <% end %>
        </h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

