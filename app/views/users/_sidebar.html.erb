<script type="text/x-handlebars-template" id="users_show_page">

  <div class="col-md-3">
    <h1>{{display_name}}</h1>
    <h4>{{username}}</h4>
    <h4>{{email}}</h4>
  </div>

  <div class="col-md-3 col-md-offset-2">
    <div class="circular ">
    </div>
  </div>

  <span class="pull-right edit-usr-info">
    <a href="#" data-toggle="modal" data-target="#myUserModal">
      <i class="fa fa-pencil"></i>
    </a>
  </span>
</script>

<div class="row user-base-info">
  <div class="col-md-12 well ">
    <div class="users_show_page">
    </div>
  </div>
</div>


<% if can?(:masquerade, @user) %>
  <%= link_to 'Become', user_masquerade_path(@user), method: :post, class: 'btn btn-info' %>
<% end %>

<!-- Modal -->
<div class="modal fade" name="update-user-modal" id="myUserModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit User</h4>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_tag url: '#' do |u| %>

            <%= u.text_field :display_name %>
            <%= u.text_field :username %>
            <%= u.text_field :email %>

        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" >Reset Password</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-warning" id="clear-modal">Clear Modal</button>
        <button type="button" class="btn btn-primary" id="update-user">Save changes</button>
      </div>
    </div>
  </div>
</div>
