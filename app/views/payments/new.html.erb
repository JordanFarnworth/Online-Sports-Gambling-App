<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <%= bootstrap_form_for @payment do |f| %>
      <div id="payment_container"></div>
      <%= f.number_field :amount, value: 1, min: 1, max: 9999, prepend: '$', append: '.00' %>
      <%= f.primary %>
    <% end %>
  </div>
</div>
<script>
  braintree.setup('<%= Braintree::ClientToken.generate %>', 'dropin', {
    container: 'payment_container'
  });
</script>